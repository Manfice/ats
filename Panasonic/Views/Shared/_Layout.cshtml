<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<header>
    <div class="container">
        <div class="row">
            @Html.ActionLink("АТС-Сервис","Index","Home", null, new {@class="navbar-brand navLogo"})
            <ul class="nav navbar-nav pull-right topMenu">
                <li><a>О компании</a></li>
                <li><a>Продукция и услуги</a></li>
                <li><a>Специалистам</a></li>
            </ul>
        </div>
    </div>
</header>

<div class="container body-content">
        @RenderBody()
        <hr />
    </div>

<footer>
    <div class="container">
        <div class="row">
            <p>&copy; @DateTime.Now.Year - АТС-Сервис г. Ставрополь</p>
        </div>
    </div>

</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
